<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.stormpath.sdk.exampleapp">

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:name=".StormpathExampleApp"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme">

        <activity android:name="com.stormpath.sdk.exampleapp.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.stormpath.sdk.ui.StormpathLoginActivity"
                  android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                    android:name="StormpathLoginActivity.AUTO_LOGIN_AFTER_REGISTER"
                    android:value="true"/>
        </activity>
        <activity android:name=".MainActivity"/>
    </application>
</manifest>
